doctype html
html
  head
    title Đăng nhập - Admin
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap")
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(160deg, #4126A6 0%, #5530B0 30%, #6D3ABB 60%, #5530B0 80%, #4126A6 100%);
        background-size: 300% 300%;
        animation: gradientShift 15s ease infinite;
        position: relative;
        overflow: hidden;
      }
      body::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background:
          radial-gradient(ellipse at 15% 60%, rgba(65, 38, 166, 0.6) 0%, transparent 55%),
          radial-gradient(ellipse at 85% 30%, rgba(109, 58, 187, 0.5) 0%, transparent 50%),
          radial-gradient(ellipse at 50% 85%, rgba(85, 48, 176, 0.5) 0%, transparent 50%),
          radial-gradient(ellipse at 70% 50%, rgba(109, 58, 187, 0.3) 0%, transparent 60%),
          radial-gradient(ellipse at 25% 25%, rgba(65, 38, 166, 0.35) 0%, transparent 45%);
        pointer-events: none;
      }
      @keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }
      .login-wrapper {
        width: 100%;
        max-width: 480px;
        padding: 40px 20px;
        text-align: center;
        position: relative;
        z-index: 1;
      }

      /* Logo */
      .login-logo-area {
        margin-bottom: 30px;
      }
      .login-logo-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 14px;
        margin-bottom: 8px;
      }
      .login-logo-icon i {
        font-size: 48px;
        color: #fff;
      }
      .login-logo-text {
        font-size: 48px;
        font-weight: 800;
        color: #fff;
        letter-spacing: 6px;
        text-transform: uppercase;
      }
      .login-logo-slogan {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
        letter-spacing: 3px;
        font-weight: 400;
      }

      /* Title */
      .login-title {
        font-size: 22px;
        font-weight: 600;
        color: #fff;
        margin-bottom: 40px;
        letter-spacing: 1px;
      }

      /* Form */
      .login-form {
        max-width: 400px;
        margin: 0 auto;
      }
      .form-group {
        margin-bottom: 18px;
      }
      .login-input {
        width: 100%;
        padding: 14px 24px;
        background: rgba(255, 255, 255, 0.15);
        border: none;
        border-radius: 50px;
        color: #fff;
        font-size: 15px;
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        outline: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
      }
      .login-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }
      .login-input:focus {
        background: rgba(255, 255, 255, 0.22);
        box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2);
      }

      /* Remember me */
      .remember-row {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 24px 0 30px;
        padding-left: 4px;
      }
      .remember-row input[type="checkbox"] {
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 4px;
        background: transparent;
        appearance: none;
        -webkit-appearance: none;
        cursor: pointer;
        position: relative;
        flex-shrink: 0;
      }
      .remember-row input[type="checkbox"]:checked {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.7);
      }
      .remember-row input[type="checkbox"]:checked::after {
        content: '✓';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 12px;
        font-weight: 700;
      }
      .remember-row label {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.65);
        cursor: pointer;
        user-select: none;
        margin: 0;
      }

      /* Button */
      .btn-login {
        display: inline-block;
        padding: 13px 60px;
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 50px;
        color: #fff;
        font-size: 16px;
        font-weight: 500;
        font-family: 'Inter', sans-serif;
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 1px;
      }
      .btn-login:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.7);
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
      }

      /* Flash */
      .flash-error {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.4);
        color: #ffb3ba;
        padding: 12px 18px;
        border-radius: 50px;
        font-size: 13px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
      }

  body
    .login-wrapper
      //- Logo area
      .login-logo-area
        .login-logo-icon
          i.fas.fa-shield-alt
          span.login-logo-text ADMIN
        .login-logo-slogan Hệ thống quản trị

      //- Title
      .login-title Đăng nhập quản trị

      //- Flash error
      if messages.error && messages.error.length > 0
        .flash-error
          i.fas.fa-exclamation-circle
          span= messages.error[0]

      //- Form
      form.login-form(action=`${prefixAdmin}/auth/login` method="POST")
        .form-group
          input.login-input(type="email" name="email" placeholder="Tài khoản" required)
        .form-group
          input.login-input(type="password" name="password" placeholder="Mật khẩu" required)

        .remember-row
          input(type="checkbox" id="remember" name="remember")
          label(for="remember") Ghi nhớ tài khoản

        button.btn-login(type="submit") Đăng nhập
