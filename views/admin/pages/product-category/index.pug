extends ../../layouts/default.pug
include ../../mixins/page-header.pug
include ../../mixins/search.pug
include ../../mixins/filter-status.pug
include ../../mixins/sort.pug
include ../../mixins/pagination.pug
include ../../mixins/batch-actions.pug

include ../../mixins/category-tree.pug

block main
  +pageHeader("Danh mục sản phẩm", "Quản lý danh mục sản phẩm trong hệ thống")
    if userPermissions && userPermissions.includes("product-category_create")
      a.btn.btn-add-product(href=`${prefixAdmin}/product-category/create`)
        i.fas.fa-plus.mr-2
        | Thêm danh mục

  //- Filter bar
  .admin-filter-bar.mb-4
    .row.align-items-center
      +search(keyword)
      +filter-status(filterStatus)
      +sort(sortOptions)
      .col-md-2
        .d-flex.gap-2
          if userPermissions && (userPermissions.includes("product-category_edit") || userPermissions.includes("product-category_delete") || userPermissions.includes("product-category_change-status"))
            +batch-actions()

  //- Categories Table
  .admin-table-wrapper
    if categories && categories.length > 0
      - var rowIndex = 0
      table.admin-table
        thead
          tr
            if userPermissions && (userPermissions.includes("product-category_edit") || userPermissions.includes("product-category_delete") || userPermissions.includes("product-category_change-status"))
              th.col-check
                input.form-check-input(type="checkbox" id="checkAll")
            th.col-stt-num STT
            th.col-img Ảnh
            th.col-title Tên danh mục
            th.col-position Vị trí
            th.col-status Trạng thái
        tbody
          +categoryTree(categories, 0, "product-category")
    else
      .admin-empty-state
        i.fas.fa-folder-open
        h4 Chưa có danh mục nào
        p Bắt đầu thêm danh mục đầu tiên cho cửa hàng
        if userPermissions && userPermissions.includes("product-category_create")
          a.btn.btn-add-product(href=`${prefixAdmin}/product-category/create`)
            i.fas.fa-plus.mr-2
            | Thêm danh mục


block append scripts
  script(src="/admin/js/product-category.js")
