extends ../../layouts/default.pug

block main
  .auth-page
    .auth-container
      .auth-card
        .auth-header
          .auth-logo
            i.fas.fa-key
          h2.auth-title Đổi mật khẩu
          p.auth-subtitle Nhập mật khẩu hiện tại và mật khẩu mới

        if messages.error && messages.error.length > 0
          .auth-flash-error
            i.fas.fa-exclamation-circle
            span= messages.error[0]

        if messages.success && messages.success.length > 0
          .auth-flash-success
            i.fas.fa-check-circle
            span= messages.success[0]

        form(action="/user/password/change" method="POST")
          .auth-form-group
            label Mật khẩu hiện tại
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="currentPassword" placeholder="Nhập mật khẩu hiện tại..." required)

          .auth-form-group
            label Mật khẩu mới
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="newPassword" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)..." required)

          .auth-form-group
            label Xác nhận mật khẩu mới
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu mới..." required)

          button.auth-btn(type="submit")
            i.fas.fa-save
            |  Đổi mật khẩu

        .auth-footer
          a(href="/user/info")
            i.fas.fa-arrow-left.mr-1
            | Quay lại thông tin tài khoản
