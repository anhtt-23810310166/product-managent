extends ../../layouts/default.pug
include ../../mixins/account-sidebar.pug

block main
  .container.py-4
    //- Breadcrumb
    nav(aria-label="breadcrumb")
      ol.breadcrumb.bg-transparent.px-0.pb-3.pt-0.mb-0.tz-breadcrumb-nav
        li.breadcrumb-item
          a.text-muted(href="/") Trang chủ
        li.breadcrumb-item.active.tz-breadcrumb-active(aria-current="page") Đổi mật khẩu

    .tz-account-layout
      +accountSidebar("password")
      .tz-account-content
        .tz-card
          .tz-card-header
            i.fas.fa-lock.mr-2
            | Đổi mật khẩu
          .tz-card-body
            .tz-profile-subtitle Nhập mật khẩu hiện tại và mật khẩu mới để cập nhật

            form(action="/user/password/change" method="POST")
              .tz-profile-form(style="max-width: 480px")
                .tz-form-group
                  label.tz-form-label Mật khẩu hiện tại
                  input.tz-form-input(type="password" name="currentPassword" placeholder="Nhập mật khẩu hiện tại..." required)

                .tz-form-group
                  label.tz-form-label Mật khẩu mới
                  input.tz-form-input(type="password" name="newPassword" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)..." required)

                .tz-form-group
                  label.tz-form-label Xác nhận mật khẩu mới
                  input.tz-form-input(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu mới..." required)

                button.tz-btn-primary(type="submit")
                  i.fas.fa-save.mr-2
                  | Đổi mật khẩu
