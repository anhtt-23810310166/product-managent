extends ../../layouts/default.pug

block main
  .auth-page
    .auth-container
      .auth-card
        .auth-header
          .auth-logo
            i.fas.fa-shield-alt
          h2.auth-title Nhập mã OTP
          p.auth-subtitle Mã OTP đã được gửi đến email:
            |  
            b= email

        if messages.error && messages.error.length > 0
          .auth-flash-error
            i.fas.fa-exclamation-circle
            span= messages.error[0]

        form(action="/user/password/otp" method="POST")
          input(type="hidden" name="email" value=email)
          .auth-form-group
            label Mã OTP
            .auth-input-wrapper
              i.fas.fa-key
              input(type="text" name="otp" placeholder="Nhập mã OTP 6 số..." maxlength="6" required)
          button.auth-btn(type="submit")
            i.fas.fa-check-circle
            |  Xác nhận

        .auth-footer
          a(href="/user/password/forgot") Gửi lại mã?
