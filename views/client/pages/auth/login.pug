extends ../../layouts/default.pug

block main
  .auth-page
    .auth-container
      .auth-card
        .auth-header
          .auth-logo
            i.fas.fa-sign-in-alt
          h2.auth-title Đăng nhập
          p.auth-subtitle Chào mừng bạn quay trở lại

        if messages.error && messages.error.length > 0
          .auth-flash-error
            i.fas.fa-exclamation-circle
            span= messages.error[0]

        form(action="/user/login" method="POST")
          .auth-form-group
            label Email
            .auth-input-wrapper
              i.fas.fa-envelope
              input(type="email" name="email" placeholder="Nhập email..." required)
          .auth-form-group
            label Mật khẩu
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="password" placeholder="Nhập mật khẩu..." required)
          button.auth-btn(type="submit")
            i.fas.fa-sign-in-alt
            |  Đăng nhập

        .auth-footer
          span Chưa có tài khoản?
          a(href="/user/register") Đăng ký ngay
