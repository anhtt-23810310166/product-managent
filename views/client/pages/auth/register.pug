extends ../../layouts/default.pug

block main
  .auth-page
    .auth-container
      .auth-card
        .auth-header
          .auth-logo
            i.fas.fa-user-plus
          h2.auth-title Đăng ký tài khoản
          p.auth-subtitle Tạo tài khoản để mua sắm dễ dàng hơn

        if messages.error && messages.error.length > 0
          .auth-flash-error
            i.fas.fa-exclamation-circle
            span= messages.error[0]

        form(action="/user/register" method="POST")
          .auth-form-group
            label Họ tên
            .auth-input-wrapper
              i.fas.fa-user
              input(type="text" name="fullName" placeholder="Nhập họ tên..." required)
          .auth-form-group
            label Email
            .auth-input-wrapper
              i.fas.fa-envelope
              input(type="email" name="email" placeholder="Nhập email..." required)
          .auth-form-group
            label Mật khẩu
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="password" placeholder="Nhập mật khẩu (ít nhất 6 ký tự)..." required)
          .auth-form-group
            label Xác nhận mật khẩu
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu..." required)
          button.auth-btn(type="submit")
            i.fas.fa-user-plus
            |  Đăng ký

        .auth-footer
          span Đã có tài khoản?
          a(href="/user/login") Đăng nhập
