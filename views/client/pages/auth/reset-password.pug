extends ../../layouts/default.pug

block main
  .auth-page
    .auth-container
      .auth-card
        .auth-header
          .auth-logo
            i.fas.fa-lock
          h2.auth-title Đổi mật khẩu
          p.auth-subtitle Nhập mật khẩu mới cho tài khoản của bạn

        if messages.error && messages.error.length > 0
          .auth-flash-error
            i.fas.fa-exclamation-circle
            span= messages.error[0]

        form(action="/user/password/reset" method="POST")
          .auth-form-group
            label Mật khẩu mới
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="password" placeholder="Nhập mật khẩu mới..." required)
          .auth-form-group
            label Xác nhận mật khẩu
            .auth-input-wrapper
              i.fas.fa-lock
              input(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu..." required)
          button.auth-btn(type="submit")
            i.fas.fa-save
            |  Đổi mật khẩu

        .auth-footer
          a(href="/user/login") Hủy bỏ
