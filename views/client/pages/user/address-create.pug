extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-8
        .card
          .card-header.bg-white
            h5.mb-0 Thêm Địa Chỉ Mới
          
          .card-body
            form(action=`/user/address/create${req.query.redirect ? "?redirect=checkout" : ""}` method="POST")
              .form-group
                label(for="fullName") Họ và tên
                input#fullName.form-control(
                  type="text" 
                  name="fullName" 
                  placeholder="Nhập họ và tên người nhận"
                  required
                )
              
              .form-group
                label(for="phone") Số điện thoại
                input#phone.form-control(
                  type="text" 
                  name="phone" 
                  placeholder="Số điện thoại liên hệ"
                  required
                )

              .form-group
                label(for="address") Địa chỉ cụ thể
                textarea#address.form-control(
                  name="address" 
                  rows="3" 
                  placeholder="Số nhà, Tên đường, Xã/Phường, Quận/Huyện, Tỉnh/Thành phố"
                  required
                )

              .form-group.d-flex.align-items-center.justify-content-between.mt-4.p-3.bg-light.rounded
                div
                  label.mb-0.font-weight-bold Thiết lập làm địa chỉ mặc định
                  div.text-muted.tz-text-muted-13 Địa chỉ này sẽ được ưu tiên hiển thị khi thanh toán
                
                .custom-control.custom-switch
                  input#isDefault.custom-control-input(type="checkbox" name="isDefault" value="true")
                  label.custom-control-label(for="isDefault")

              .form-group.mt-4.mb-3
                button.btn.btn-block.text-white.mt-3.btn-tz-primary-block(type="submit") Lưu Địa Chỉ
                a.btn.btn-outline-secondary.btn-block.mt-2.btn-tz-secondary-block(href="/user/address") Huỷ bỏ
